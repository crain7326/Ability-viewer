{ 
  "compileOnSave": true, 
  "extends": "../tsconfig.json",
  "compilerOptions": { 
    "target": "es2016", 
    "jsx": "react-jsx", 
    "module": "esnext", 
    "sourceMap": true, 
    "removeComments": true, 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "strict": true, 
    "skipLibCheck": true,
    "lib": [ 
      "dom", 
      "dom.iterable", 
      "esnext" ], 
    "allowJs": true, 
    "allowSyntheticDefaultImports": true, 
    "noFallthroughCasesInSwitch": true, 
    "moduleResolution": "node", 
    "resolveJsonModule": true, 
    "isolatedModules": false, 
    "noEmit": true,
    "typeRoots": ["src/types"],
    }, 
  "include": [ 
    "./src/" 
  ], 
  "exclude": [ 
    "node_modules/*" 
  ] 
}